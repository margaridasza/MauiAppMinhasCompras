<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.RelatorioCategoria"
             Title="RelatÃ³rio por Categoria">

    <VerticalStackLayout Padding="10">
        <CollectionView x:Name="RelatorioCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="5" Margin="5">
                        <HorizontalStackLayout>
                            <Label Text="{Binding Categoria}" FontAttributes="Bold" WidthRequest="150"/>
                            <Label Text="{Binding Total, StringFormat='R$ {0:F2}'}" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
